{
  "name": "hypera",
  "version": "1.0.0",
  "private": false,
  "author": "Fatz",
  "main": "public/electron/main.js",
  "repository": "git@github.com:fatzchang/hypera.git",
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@testing-library/user-event": "^13.5.0",
    "antd": "^4.20.0",
    "node-machine-id": "^1.1.12",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-scripts": "5.0.1",
    "uuid": "^8.3.2",
    "web-vitals": "^2.1.4",
    "ws": "^8.6.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:dev": "set ELECTRON_DEV_MODE=1 && electron .",
    "electron:pack": "electron-builder -c.extraMetadata.main=build/electron/main.js",
    "electron:release": "electron-builder -c.extraMetadata.main=build/electron/main.js -w -p onTagOrDraft"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^18.1.0",
    "electron-builder": "^23.0.3"
  },
  "build": {
    "appId": "com.app.hypera",
    "extraResources": "assets",
    "protocols": {
      "name": "hypera-protocol",
      "schemes": ["hypera"]
    },
    "publish": {
      "provider": "github"
    }
  }
}
